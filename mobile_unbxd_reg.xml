<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Mobile_Suite" thread-count="1">
    <listeners>
        <listener class-name="atu.testng.reports.listeners.ATUReportsListener"></listener>
        <listener class-name="atu.testng.reports.listeners.ConfigurationListener"></listener>
        <listener class-name="atu.testng.reports.listeners.MethodListener"></listener>
    </listeners>

    <test name="US_Guest_suite">
        <parameter name="store" value="US"/>
        <parameter name="users" value="guest"/>
        <groups>
            <run>
                <exclude name="registeredonly"/>
                <exclude name="recommendations"/>
                <exclude name="caonly"/>
                <exclude name="giftcard"/>
                <exclude name="paypal"/>
                <exclude name="shoppingbag"/>
                <include name="pdp"/>
                <include name="search"/>
                <exclude name="checkout"/>
                <include name="plp"/>
                <exclude name="rtps"/>
                <exclude name="wic"/>
                <exclude name="remembereduser"/>
                <exclude name="regression"/>
            </run>
        </groups>
        <classes>

            <class name="tests.mobileDT.globalComponents.MobileGlobalSearchField"/>

            <class name="tests.mobileDT.globalComponents.PLPScreen"/>

            <class name="tests.mobileDT.pdp.pdpScreen"/>
        </classes>
    </test>
    <test name="US_Reg_suite">
        <parameter name="store" value="US"/>
        <parameter name="users" value="registered"/>
        <groups>
            <run>
                <exclude name="guestonly"/>
                <exclude name="recommendations"/>
                <exclude name="caonly"/>
                <exclude name="giftcard"/>
                <exclude name="paypal"/>
                <exclude name="shoppingbag"/>
                <include name="pdp"/>
                <include name="search"/>
                <exclude name="checkout"/>
                <include name="plp"/>
                <exclude name="rtps"/>
                <exclude name="wic"/>
                <exclude name="remembereduser"/>
                <exclude name="regression"/>
            </run>
        </groups>
        <classes>

            <class name="tests.mobileDT.globalComponents.MobileGlobalSearchField"/>

            <class name="tests.mobileDT.globalComponents.PLPScreen"/>

            <class name="tests.mobileDT.pdp.pdpScreen"/>
        </classes>
    </test>
    <test name="CA_Registered_suite">
        <parameter name="store" value="CA"/>
        <parameter name="users" value="registered"/>
        <groups>
            <run>
                <exclude name="guestonly"/>
                <exclude name="recommendations"/>
                <exclude name="usonly"/>
                <exclude name="bopis"/>
                <exclude name="paypal"/>
                <exclude name="giftcard"/>
                <exclude name="checkout"/>
                <include name="search"/>
                <include name="plp"/>
                <include name="pdp"/>
                <exclude name="shoppingbag"/>
                <exclude name="myaccount"/>
            </run>
        </groups>
        <classes>
            <class name="tests.mobileDT.globalComponents.MobileGlobalSearchField"/>

            <class name="tests.mobileDT.globalComponents.PLPScreen"/>

            <class name="tests.mobileDT.pdp.pdpScreen"/>

        </classes>
    </test>

    <test name="CA_Guest_suite">
        <parameter name="store" value="CA"/>
        <parameter name="users" value="guest"/>
        <groups>
            <run>
                <exclude name="registeredonly"/>
                <exclude name="recommendations"/>
                <exclude name="usonly"/>
                <exclude name="bopis"/>
                <exclude name="paypal"/>
                <exclude name="giftcard"/>
                <exclude name="checkout"/>
                <include name="search"/>
                <include name="plp"/>
                <include name="pdp"/>
                <exclude name="shoppingbag"/>
                <exclude name="myaccount"/>
            </run>
        </groups>
        <classes>
            <class name="tests.mobileDT.globalComponents.MobileGlobalSearchField"/>

            <class name="tests.mobileDT.globalComponents.PLPScreen"/>

            <class name="tests.mobileDT.pdp.pdpScreen"/>

        </classes>
    </test>

</suite>